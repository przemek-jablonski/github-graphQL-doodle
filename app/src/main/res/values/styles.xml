<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_triadic_purple</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTextTitlePrimary"><item name="android:textAppearance">@style/TextTitlePrimary</item></style>
    <style name="TextTitlePrimary">
        <item name="android:textColor">@color/app_triadic_purple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_huge</item>
    </style>

    <style name="AppTextTitlePrimaryLight"><item name="android:textAppearance">@style/TextTitlePrimaryLight</item></style>
    <style name="TextTitlePrimaryLight">
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_huge</item>
    </style>

    <style name="AppTextTitleNormal"><item name="android:textAppearance">@style/TextTitleNormal</item></style>
    <style name="TextTitleNormal">
        <item name="android:textColor">@color/app_triadic_purple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <style name="AppTextLight"><item name="android:textAppearance">@style/TextLight</item></style>
    <style name="TextLight">
        <item name="android:textColor">@color/materialGrey500</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="AppTextSmallHeavy"><item name="android:textAppearance">@style/TextSmallHeavy</item></style>
    <style name="TextSmallHeavy">
        <item name="android:textColor">@color/materialGrey700</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>


